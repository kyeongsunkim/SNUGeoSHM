# SNUGeoSHM Environment Configuration
# Copy this file to .env and update with your values

# Security
SECRET_KEY=your-secret-key-here-change-this
DASH_USERNAME=admin
DASH_PASSWORD=your-secure-password-here
SESSION_TIMEOUT_MINUTES=30
MAX_UPLOAD_SIZE_MB=100
ENABLE_CSRF_PROTECTION=True

# Database (set DB_TYPE=postgres to use PostgreSQL instead of files)
DB_TYPE=file
DB_HOST=localhost
DB_PORT=5432
DB_NAME=snugeoshm
DB_USER=postgres
DB_PASSWORD=your-db-password-here
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Cache (set CACHE_TYPE=redis to use Redis instead of simple cache)
CACHE_TYPE=simple
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_DEFAULT_TIMEOUT=300

# Application
DEBUG=False
HOST=0.0.0.0
PORT=8050
LOG_LEVEL=INFO
DATA_REFRESH_INTERVAL_MS=60000
ENABLE_PROFILING=False

# Data Validation
ENABLE_DATA_VALIDATION=True
MAX_COORDINATE_BOUND=1000
MIN_QC_VALUE=0
MAX_QC_VALUE=100
MAX_CSV_SIZE=104857600
MAX_NETCDF_SIZE=524288000

# Performance
MAX_WORKERS=4
ENABLE_ASYNC=True
MAP_CLUSTER_THRESHOLD=100
CHUNK_SIZE=10000

# Monitoring
ENABLE_METRICS=False
METRICS_PORT=9090
SENTRY_DSN=
ENABLE_REQUEST_LOGGING=True
